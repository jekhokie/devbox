{
    "variables": {
        "apt_packages": "",
        "homedir_files": "",
        "memory": "",
        "num_cpus": ""
    },
    "builders": [{
        "boot_command": [
            "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs>",
            "/install/vmlinuz noapic ",
            "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
            "auto-install/enable=true ",
            "hostname=ubuntu-1604 ",
            "debconf/priority=critical ",
            "initrd=/install/initrd.gz -- <enter>"
        ],
        "boot_wait": "5s",
        "disk_size": 10000,
        "guest_os_type": "Ubuntu_64",
        "headless": false,
        "http_directory": "http",
        "iso_url": "http://releases.ubuntu.com/16.04/ubuntu-16.04-server-amd64.iso",
        "iso_checksum": "23e97cd5d4145d4105fbf29878534049",
        "iso_checksum_type": "md5",
        "name": "ubuntu-1604",
        "output_directory": "build",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_pty": true,
        "ssh_timeout": "10m",
        "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
        "type": "virtualbox-iso",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
            ["modifyvm", "{{.Name}}", "--cpus", "{{user `num_cpus`}}"]
        ]
    }],
    "provisioners": [
        {
            "environment_vars": [
                "apt_packages={{user `apt_packages`}}"
            ],
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "scripts": [
                "scripts/vagrant_sudo.sh",
                "scripts/vbox_guest_additions.sh",
                "scripts/apt_packages.sh"
            ],
            "type": "shell"
        },
        {
            "environment_vars": [
                "homedir_files={{user `homedir_files`}}"
            ],
            "scripts": [
                "scripts/home_dir.sh"
            ],
            "type": "shell"
        }
    ],
    "post-processors": [{
        "keep_input_artifact": false,
        "output": "../../artifacts/{{.BuildName}}_{{.Provider}}_{{timestamp}}.box",
        "type": "vagrant"
    }]
}
